<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".HostEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Event Image with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/glass_background"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/eventImageHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#20FFFFFF"
                android:contentDescription="Event Image"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Title -->
        <TextView
            android:id="@+id/eventTitleHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:text="Host Event Title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/eventDateHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Host Event Date"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Host Event Time"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescriptionHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="8dp"
            android:text="Event description..."
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Buttons with Material styling -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startChatBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Start Chat"
            android:textColor="@android:color/white"
            android:backgroundTint="#40FFFFFF"
            android:elevation="10dp"
            app:cornerRadius="22dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startVideoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Video"
            android:textColor="@android:color/white"
            android:backgroundTint="#40FFFFFF"
            android:elevation="10dp"
            app:cornerRadius="22dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/endEventBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="End Event"
            android:textColor="@android:color/white"
            android:backgroundTint="#40FFFFFF"
            android:elevation="10dp"
            app:cornerRadius="22dp" />

    </LinearLayout>
</ScrollView>
