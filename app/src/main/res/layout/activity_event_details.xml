<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".EventDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        tools:layout_editor_absoluteX="900dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!-- Event Image with rounded corners -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/glass_background"
                android:clipToPadding="false"
                app:cardCornerRadius="18dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/eventImageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#20FFFFFF"
                    android:contentDescription="Event Image"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Event Title -->
            <TextView
                android:id="@+id/eventTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Event Title"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/eventDateDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Event Date"
                android:textColor="#CCFFFFFF"
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#40FFFFFF" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/eventDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:text="Event description goes here..."
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Buttons container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:divider="?attr/dividerVertical"
                android:dividerPadding="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/joinEventButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#40FFFFFF"
                    android:elevation="10dp"
                    android:text="Join Event"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/joinChatButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#40FFFFFF"
                    android:elevation="10dp"
                    android:text="Join Chat"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/joinVideoButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#40FFFFFF"
                    android:elevation="10dp"
                    android:text="Join Video"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
